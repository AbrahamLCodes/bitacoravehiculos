<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@layout/shape_producto_dialog">
    <!-- A blank view to force the layout to be full-width -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/tituloInfoProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtro de gasolina"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:fontFamily="@font/helvetica"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/producto0"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Se aplica al/los automovil(es):"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/producto1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Modelo:"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/producto2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Marca:"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/producto3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="#Serie:"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/producto4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Comentario:"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_margin="10dp"/>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productoInfoRegresar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="#009688"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center"
                    android:text="Regresar"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productoInfoBuscar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="#03A9F4"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center"
                    android:text="Detalles"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/productoInfoEditar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="#FF9800"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center"
                    android:text="Editar"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productoInfoEliminar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="#FF5722"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center"
                    android:text="Eliminar"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>