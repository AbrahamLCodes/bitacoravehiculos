<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@layout/shape_taller_dialog"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/tallerAdapterImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/llave"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tallerAdapterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alfredo Armendariz"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:fontFamily="@font/helvetica"/>
        <TextView
            android:id="@+id/tallerAdapterDir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aldama  #110 Col. Centro"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/helvetica"/>
        <TextView
            android:id="@+id/tallerAdapterCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camargo, Chihuahua."
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/helvetica"/>
        <TextView
            android:id="@+id/tallerAdapterTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(648)122-7087"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/helvetica"/>
    </LinearLayout>
</LinearLayout>