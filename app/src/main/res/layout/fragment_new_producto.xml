<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/shape_producto_dialog"
    android:orientation="vertical">

    <!-- A blank view to force the layout to be full-width -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Registrar Producto"
        android:textColor="#000000"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/productoIn0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@layout/shape_input"
                android:fontFamily="@font/helvetica"
                android:hint="Nombre del Producto"
                android:inputType="textCapSentences"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#554E4E"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/productoIn1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@layout/shape_input"
                android:fontFamily="@font/helvetica"
                android:hint="ID del auto a asignar"
                android:inputType="textCapSentences"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#554E4E"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/productoIn2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@layout/shape_input"
                android:fontFamily="@font/helvetica"
                android:hint="Modelo"
                android:inputType="textCapSentences"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#554E4E"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/productoIn3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@layout/shape_input"
                android:fontFamily="@font/helvetica"
                android:hint="Marca"
                android:inputType="textCapSentences"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#554E4E"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/productoIn4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@layout/shape_input"
                android:fontFamily="@font/helvetica"
                android:hint="#Serie"
                android:inputType="textCapSentences"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#554E4E"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/productoIn5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@layout/shape_input"
                android:fontFamily="@font/helvetica"
                android:hint="Comentario"
                android:inputType="textCapSentences"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#554E4E"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/productoNewBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:text="Cancelar"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/productoNewOk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:text="Registrar"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>