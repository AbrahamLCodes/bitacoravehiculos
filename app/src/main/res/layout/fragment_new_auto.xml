<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@layout/shape_auto_dialog">
    <!-- A blank view to force the layout to be full-width -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Registrar auto"
        android:textColor="#000000"
        android:textSize="30sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">


        <EditText
            android:id="@+id/autoIn0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@layout/shape_input"
            android:fontFamily="@font/helvetica"
            android:hint="Fabricante"
            android:inputType="textCapSentences"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#554E4E"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/autoIn1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@layout/shape_input"
            android:fontFamily="@font/helvetica"
            android:hint="Modelo"
            android:inputType="textCapSentences"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#554E4E"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/autoIn2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@layout/shape_input"
            android:fontFamily="@font/helvetica"
            android:hint="Año"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#554E4E"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/autoIn3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@layout/shape_input"
            android:fontFamily="@font/helvetica"
            android:hint="Motor (Ej: 2.3 sólo numeros)"
            android:inputType="textCapSentences"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#554E4E"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/autoIn4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@layout/shape_input"
            android:fontFamily="@font/helvetica"
            android:hint="ID:"
            android:inputType="textCapSentences"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#554E4E"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/autoIn5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@layout/shape_input"
            android:fontFamily="@font/helvetica"
            android:hint="Comentario extra sobre el vehículo"
            android:inputType="textCapSentences"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#554E4E"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/autoNewBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:text="Cancelar"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/autoNewOk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:text="Registrar"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>