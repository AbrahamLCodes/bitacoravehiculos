<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@layout/shape_servicio_dialog"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/servicioAdapterImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/service"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/servicioAdapterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambio de aceite"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:fontFamily="@font/helvetica"/>
        <TextView
            android:id="@+id/servicioAdapterAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ford Ranger 2007"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/helvetica"/>
        <TextView
            android:id="@+id/servicioAdapterFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27/Septiembre/2020"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/helvetica"/>
        <TextView
            android:id="@+id/servicioAdapterTaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Automotriz del norte"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/helvetica"/>
    </LinearLayout>
</LinearLayout>